<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="832.0" prefWidth="1280.0" style="-fx-background-color: #0A0E27;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.CustomerControl.ReproductorMusical.ReproduccionCancionController">


   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-padding: 15px; -fx-background-color: #0A0E27;">
         <children>
            <!-- Botón de regreso con fondo claro -->
            <Button style="-fx-background-color: #5A5A80; -fx-background-radius: 20px; -fx-padding: 5px;">
               <graphic>
                  <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                     <image>
                        <Image url="@../../Resources/img/regresar-pagina.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>

            <TextField fx:id="txtBuscarCancion" promptText="¿Qué quieres reproducir?"
                       style="-fx-background-color: #AFAFC7; -fx-text-fill: #0A0E27; -fx-prompt-text-fill: #666666; -fx-background-radius: 20px; -fx-padding: 10px 15px;"
                       HBox.hgrow="ALWAYS" />

            <Button onAction="#clickBuscarCancion"
                    style="-fx-background-color: #5A5A80; -fx-text-fill: white; -fx-background-radius: 20px; -fx-min-width: 35px;"
                    text="🔍" />
         </children>
      </HBox>
   </top>



   <center>
      <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 30px;">
         <Label fx:id="lblNombreCancion" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Song Title" textFill="WHITE" />
         <ImageView fx:id="imgAlbumArtCentral" fitHeight="420.0" fitWidth="420.0" preserveRatio="true" />
         <Label fx:id="lblArtista" style="-fx-font-size: 20px;" text="Artist" textFill="WHITE" />
      </VBox>
   </center>

   <bottom>
      <VBox style="-fx-background-color: #201D4E; -fx-padding: 0;">

         <Slider fx:id="pgbProgresoCancion"
                 max="1.0" value="0.0"
                 style="-fx-control-inner-background: #5A5A80; -fx-pref-height: 8px;" />

         <HBox alignment="CENTER" spacing="0.0" style="-fx-padding: 15px 60px;">
            <children>

               <HBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="10.0">
                  <children>
                     <Pane fx:id="panImageAlbum1" prefWidth="50.0" prefHeight="50.0" style="-fx-background-radius: 5px;">
                        <children>
                           <ImageView fx:id="imgAlbumActualAbajo" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" />
                        </children>
                     </Pane>
                     <VBox>
                        <Label fx:id="lblNombreCancion1" text="Nombre canción" textFill="WHITE" style="-fx-font-size: 14px;" />
                        <Label fx:id="lblArtista1" text="Artista" textFill="#AFAFC7" style="-fx-font-size: 12px;" />
                     </VBox>
                  </children>
               </HBox>

               <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                  <children>
                     <HBox alignment="CENTER" spacing="40.0">
                        <Button onAction="#clickAnterior"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px;"
                                text="⏮" />

                        <Button onAction="#clickReproducir"
                                style="-fx-background-color: transparent;">
                           <graphic>
                              <ImageView fx:id="imgPlayPause" fitHeight="54.0" fitWidth="54.0" preserveRatio="true">
                                 <image>
                                    <Image url="@../../Resources/img/boton-de-play.png"/>
                                 </image>
                                 <effect><ColorAdjust brightness="1.0" /></effect>
                              </ImageView>
                           </graphic>
                        </Button>

                        <Button onAction="#clickSiguiente"
                                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px;"
                                text="⏭" />
                     </HBox>
                     <Label fx:id="lblTiempoCancion" text="00:00 / 00:00" textFill="#AFAFC7" style="-fx-font-size: 12px;" />
                  </children>
               </VBox>


               <Region prefWidth="250.0" />

            </children>
         </HBox>
      </VBox>
   </bottom>





</BorderPane>
