<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--
    Archivo FXML que define la vista de la parte de subir canciones del sistema InkHarmony.
    Descripción: Interfaz gráfica que permite subir canciones al catálogo del sistema.
    Controlador asociado: SubirCancionesController

    @author Grupo A
    @version 1.0
    @since 19-07-2025
-->


<AnchorPane prefHeight="797.0" prefWidth="1280.0" style="-fx-background-color: #070F2B;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.CustomerControl.CatalogoCanciones.SubirCancionesController">
    <children>
        <!--
    Encabezado superior con título y botón de cierre
-->
        <AnchorPane layoutX="151.0" layoutY="152.0" prefHeight="606.0" prefWidth="922.0" style="-fx-background-color: #1B1A55; -fx-background-radius: 25;" AnchorPane.leftAnchor="151.0" AnchorPane.rightAnchor="207.0">
            <children>
                <!-- Label del título de la canción -->
                <Label fx:id="tituloLabel" layoutX="33.0" layoutY="37.0" prefHeight="35.0" prefWidth="209.0" text="Título de la canción" textFill="#ffffff">
                    <font><Font size="24.0" /></font>
                </Label>
                <!-- Label del año  -->
                <Label fx:id="añoLanzamientoLabel" layoutX="33.0" layoutY="161.0" text="Año de lanzamiento de la canción" textFill="#ffffff">
                    <font><Font size="24.0" /></font>
                </Label>
                <!-- Campo de texto para el título de la canción -->
                <TextField fx:id="nombreTextField" layoutX="30.0" layoutY="85.0" prefHeight="60.0" prefWidth="434.0" promptText="Ingresa el título de la canción" style="-fx-background-color: #575a81; -fx-background-radius: 20; -fx-text-fill: #FFFFFF;">
                    <font><Font size="20.0" /></font>
                </TextField>
                <!-- Campo de texto para el año de lanzamiento -->
                <TextField fx:id="nombreTextField1" layoutX="30.0" layoutY="209.0" prefHeight="60.0" prefWidth="434.0" promptText="Ingresa el año de lanzamiento" style="-fx-background-color: #575a81; -fx-background-radius: 20; -fx-text-fill: #FFFFFF;">
                    <font><Font size="20.0" /></font>
                </TextField>
                <!-- Label para el artista -->
                <Label fx:id="artistaLabel" layoutX="30.0" layoutY="293.0" text="Artista" textFill="#ffffff">
                    <font><Font size="24.0" /></font>
                </Label>

                <!-- MenuButton con estilo morado igual que género -->
                <MenuButton fx:id="artistaMenuButton" layoutX="30.0" layoutY="334.0" mnemonicParsing="false" prefHeight="51.0" prefWidth="198.0" style="-fx-background-color: #575a81; -fx-background-radius: 20;" stylesheets="@catologoCanciones.css" text="Selecciona artistas" textFill="WHITE">
                    <font><Font size="16.0" /></font>
                </MenuButton>

                <!-- ListView para canciones del artista -->
                <ListView fx:id="cancionesListView" layoutX="30.0" layoutY="400.0" prefHeight="100.0" prefWidth="434.0" style="-fx-background-color: #1B1A55; -fx-border-color: #9190C2; -fx-border-radius: 10;" visible="false" />
                <!-- Label para el género -->
                <Label layoutX="295.0" layoutY="293.0" prefHeight="35.0" prefWidth="83.0" text="Género" textFill="WHITE">
                    <font><Font size="24.0" /></font>
                </Label>
                <!-- MenuButton para seleccionar género -->
                <MenuButton fx:id="generoMenuButton" layoutX="286.0" layoutY="334.0" mnemonicParsing="false" prefHeight="51.0" prefWidth="198.0" style="-fx-background-color: #575a81; -fx-background-radius: 20;" stylesheets="@catologoCanciones.css" text="Selecciona" textFill="WHITE">
                    <font><Font size="20.0" /></font>
                </MenuButton>
                <!-- Label para el archivo mp3 -->
                <Label layoutX="30.0" layoutY="415.0" prefHeight="35.0" prefWidth="297.0" text="Archivo .mp3 de la canción" textFill="WHITE">
                    <font><Font size="24.0" /></font>
                </Label>

                <!-- Botón para seleccionar un archivo -->
                <Button fx:id="seleccionarArchivoButton" layoutX="30.0" layoutY="457.0" mnemonicParsing="false" onAction="#seleccionarArchivo" prefHeight="51.0" prefWidth="198.0" style="-fx-background-color: #575a81; -fx-background-radius: 20;" text="Seleccionar archivo" textFill="WHITE">
                    <font><Font size="18.0" /></font>
                </Button>

                <!-- Label para mostrar el archivo seleccionado -->
                <Label fx:id="archivoSeleccionadoLabel" layoutX="248.0" layoutY="470.0" prefHeight="25.0" prefWidth="236.0" text="" textFill="#9190C2" visible="false">
                    <font><Font size="12.0" /></font>
                </Label>
                <!-- Botón para registrar la canción -->
                <Button fx:id="registrarButton" layoutX="292.0" layoutY="517.0" mnemonicParsing="false" onAction="#registrarCancion" prefHeight="60.0" prefWidth="345.0" style="-fx-background-color: #9190C2; -fx-background-radius: 10;" text="Subir">
                    <font><Font name="System Bold" size="26.0" /></font>
                </Button>
                <!-- Panel para la imagen de la canción con botón -->
                <AnchorPane layoutX="549.0" layoutY="171.0" prefHeight="264.0" prefWidth="264.0" style="-fx-background-color: #9190C2; -fx-background-radius: 20;">
                    <children>
                        <ImageView fx:id="cancionImageView" fitHeight="264.0" fitWidth="306.0" layoutY="1.0" pickOnBounds="true" preserveRatio="false">
                            <image>
                                <Image url="@../../Resources/img/CatalogoCanciones/camara.png" />
                            </image>
                        </ImageView>
                        <Button fx:id="cargarImagenButton" layoutX="11.0" layoutY="21.0" onAction="#seleccionarImagen" opacity="0" prefHeight="232.0" prefWidth="283.0" />
                    </children>
                </AnchorPane>
                <!-- Label para seleccionar imagen -->
                <Label fx:id="seleccionarLabel" layoutX="526.0" layoutY="102.0" opacity="0.48" prefHeight="35.0" prefWidth="366.0" text="Selecciona una imagen de la canción  (.png) (264x264)" textFill="WHITE">
                    <font><Font size="15.0" /></font>
                </Label>
            </children>
        </AnchorPane>
        <!-- Título principal -->
        <Label layoutX="86.0" layoutY="55.0" text="NUEVA CANCIÓN" textAlignment="CENTER" textFill="WHITE">
            <font><Font size="80.0" /></font>
        </Label>
        <!-- Botón de cierre de ventana -->
        <Button fx:id="cerrarButton" layoutX="3.0" mnemonicParsing="false" onAction="#cerrarVentana" prefHeight="47.0" prefWidth="83.0" style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-weight: normal;" text="X" textFill="WHITE">
            <font><Font size="40.0" /></font>
        </Button>
    </children>
</AnchorPane>