<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.CustomerControl.Playlist.CatalogoPlaylistController">

   <!-- Panel superior con búsqueda principal -->
   <top>
      <VBox style="-fx-background-color: #0A0E27; -fx-padding: 15px;">
         <children>
            <!-- Barra de búsqueda principal -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="btnRegresar" onAction="#handleRegresar" style="-fx-background-color: transparent; -fx-padding: 0;">
                     <graphic>
                        <ImageView fitHeight="38.0" fitWidth="38.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <javafx.scene.image.Image url="@../../Resources/img/CatalogoPlaylist/regresar.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <TextField fx:id="txtBusquedaPrincipal" onKeyReleased="#handleBusquedaPrincipal" prefWidth="400.0" promptText="¿Qué quieres reproducir?" style="-fx-background-color: #AFAFC7; -fx-text-fill: #0A0E27; -fx-prompt-text-fill: #666666; -fx-background-radius: 20px; -fx-padding: 10px 15px;" />
                  <Button fx:id="btnBuscar" onAction="#handleBuscar" style="-fx-background-color: #5A5A80; -fx-text-fill: white; -fx-background-radius: 20px; -fx-min-width: 35px; -fx-min-height: 35px;" text="🔍" />
                  <!-- Espaciador para empujar el logo a la derecha -->
                  <Pane HBox.hgrow="ALWAYS" />
                  
                  <!-- Logo de la aplicación como botón al extremo derecho -->
                  <Button fx:id="btnLogo" onAction="#handleLogo" style="-fx-background-color: transparent; -fx-padding: 0;">
                     <graphic>
                        <StackPane alignment="CENTER">
                           <Circle fill="#AFAFC7" radius="28" />
                           <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                 <javafx.scene.image.Image url="@../../Resources/img/CatalogoPlaylist/simbolo-aplicacion.png" />
                              </image>
                           </ImageView>
                        </StackPane>
                     </graphic>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>

   <!-- Panel principal -->
   <center>
      <HBox>
         <children>
            <!-- Panel izquierdo - Tu Biblioteca -->
            <VBox prefWidth="320.0" style="-fx-background-color: #201D4E; -fx-padding: 15px 15px 15px 15px; -fx-spacing: 5px;">
               <children>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Tu Biblioteca" />
                        <Button fx:id="btnAgregarPlaylist" onAction="#handleAgregarPlaylist" style="-fx-background-color: #5A5A80; -fx-text-fill: white; -fx-background-radius: 15px; -fx-min-width: 30px; -fx-min-height: 30px;" text="+" />
                     </children>
                  </HBox>

                  <!-- Búsqueda de playlists -->
                  <TextField fx:id="txtBuscarPlaylist" onKeyReleased="#handleBuscarPlaylist" promptText="Busca una playlist por nombre" style="-fx-background-color: #5A5A80; -fx-text-fill: white; -fx-prompt-text-fill: #AFAFC7; -fx-background-radius: 15px; -fx-padding: 8px 12px;" VBox.vgrow="NEVER" />

                  <!-- Mensaje para crear primera playlist -->
                  <VBox fx:id="vboxCrearPrimera" alignment="CENTER" spacing="15.0" style="-fx-padding: 40px 20px;" visible="false">
                     <children>
                        <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-text-alignment: center; -fx-wrap-text: true;" text="Crea tu primera Playlist" />
                        <Button fx:id="btnCrear" onAction="#handleAgregarPlaylist" style="-fx-background-color: #AFAFC7; -fx-text-fill: #0A0E27; -fx-background-radius: 20px; -fx-padding: 10px 30px; -fx-font-size: 14px; -fx-font-weight: bold;" text="Crear" />
                     </children>
                  </VBox>

                  <!-- Lista de playlists -->
                  <ListView fx:id="listPlaylists" onMouseClicked="#handleSeleccionarPlaylist" style="-fx-background-color: #201D4E; -fx-control-inner-background: #201D4E; -fx-selection-bar: #5A5A80; -fx-selection-bar-non-focused: #5A5A80;" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>

            <!-- StackPane para alternar entre diferentes vistas -->
            <StackPane HBox.hgrow="ALWAYS">
               <children>
                  <!-- Vista 1: Catálogo principal (playlists del momento) -->
                  <VBox fx:id="vboxCatalogoPrincipal" spacing="25.0" style="-fx-background-color: #0A0E27; -fx-padding: 20px;" visible="true">
                     <children>
                        <!-- Filtro de Música -->
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Button fx:id="btnFiltroMusica" style="-fx-background-color: #AFAFC7; -fx-text-fill: #0A0E27; -fx-background-radius: 15px; -fx-padding: 8px 20px; -fx-font-size: 12px; -fx-font-weight: bold;" text="Música" />
                              <Button fx:id="btnRecomendaciones" onAction="#handleRecomendaciones" style="-fx-background-color: #5A5A80; -fx-text-fill: white; -fx-background-radius: 15px; -fx-padding: 8px 20px; -fx-font-size: 12px; -fx-font-weight: bold;" text="Recomendaciones" />
                           </children>
                        </HBox>

                        <!-- Sección: Playlist del momento -->
                        <VBox spacing="20.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Playlist del momento" />

                              <!-- Grid de playlists recomendadas - Primera fila -->
                              <GridPane fx:id="gridPlaylistsMomento1" hgap="20.0" vgap="20.0">
                                 <columnConstraints>
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                 </columnConstraints>
                              </GridPane>

                              <!-- Grid de playlists recomendadas - Segunda fila -->
                              <GridPane fx:id="gridPlaylistsMomento2" hgap="20.0" vgap="20.0">
                                 <columnConstraints>
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                    <ColumnConstraints minWidth="150.0" prefWidth="150.0" />
                                 </columnConstraints>
                              </GridPane>
                           </children>
                        </VBox>
                     </children>
                  </VBox>

                  <!-- Vista 2: Playlist vacía -->
                  <VBox fx:id="vboxPlaylistVacia" spacing="20.0" style="-fx-background-color: #0A0E27; -fx-padding: 30px;" visible="false">
                     <children>
                        <!-- Header con información de la playlist (estilo Spotify) -->
                        <HBox alignment="CENTER_LEFT" spacing="25.0" style="-fx-padding: 20px;">
                           <children>
                              <!-- Portada de la playlist -->
                              <VBox alignment="CENTER" style="-fx-background-color: #201D4E; -fx-background-radius: 10px; -fx-min-width: 160px; -fx-min-height: 160px; -fx-max-width: 160px; -fx-max-height: 160px;">
                                 <children>
                                    <ImageView fx:id="imgPortadaPlaylistVacia" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <javafx.scene.image.Image url="@../../Resources/img/CatalogoPlaylist/simbolo-aplicacion.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </VBox>

                              <!-- Información de la playlist alineada a la izquierda -->
                              <VBox alignment="CENTER_LEFT" spacing="12.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-font-weight: bold;" text="PLAYLIST" />
                                    <Label fx:id="lblNombrePlaylistVacia" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-wrap-text: true;" text="Nombre de Playlist" />

                                    <HBox alignment="CENTER_LEFT" spacing="8.0">
                                       <children>
                                          <Label fx:id="lblDescripcionPlaylistVacia" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px; -fx-wrap-text: true;" text="Descripción de la playlist" />
                                          <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="•" />
                                          <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="0 canciones" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>

                        <!-- Botones de acción alineados a la izquierda -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 20px;">
                           <children>
                              <Button fx:id="btnAgregarCancionesVacia" onAction="#handleAgregarCanciones" style="-fx-background-color: #9190C2; -fx-text-fill: black; -fx-background-radius: 20px; -fx-padding: 12px 20px; -fx-font-size: 12px; -fx-font-weight: bold;" text="+ Agregar Canciones" />
                              <Button fx:id="btnEditarPlaylistVacia" onAction="#handleEditarPlaylist" style="-fx-background-color: transparent; -fx-text-fill: #AFAFC7; -fx-border-color: #AFAFC7; -fx-border-width: 2px; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-padding: 12px 15px; -fx-font-size: 12px;" text="Editar" />
                           </children>
                        </HBox>

                        <!-- Mensaje central de playlist vacía -->
                        <VBox alignment="CENTER" spacing="30.0" style="-fx-padding: 50px;" VBox.vgrow="ALWAYS">
                           <children>
                              <VBox alignment="CENTER" spacing="20.0">
                                 <children>
                                    <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-text-alignment: center;" text="La playlist está vacía," />
                                    <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-text-alignment: center;" text="agrega canciones para empezar." />
                                    <Button onAction="#handleAgregarCanciones" style="-fx-background-color: #9190C2; -fx-text-fill: black; -fx-background-radius: 25px; -fx-padding: 15px 30px; -fx-font-size: 14px; -fx-font-weight: bold;" text="+ Agregar Canciones">
                                       <VBox.margin>
                                          <Insets top="20.0" />
                                       </VBox.margin>
                                    </Button>
                                 </children>
                              </VBox>
                           </children>
                        </VBox>
                     </children>
                  </VBox>

                  <!-- Vista 3: Playlist con canciones -->
                  <VBox fx:id="vboxPlaylistConCanciones" spacing="20.0" style="-fx-background-color: #0A0E27; -fx-padding: 30px;" visible="false">
                     <children>
                        <!-- Header con información de la playlist (estilo Spotify) -->
                        <HBox alignment="CENTER_LEFT" spacing="25.0" style="-fx-padding: 20px;">
                           <children>
                              <!-- Portada de la playlist -->
                              <VBox alignment="CENTER" style="-fx-background-color: #201D4E; -fx-background-radius: 10px; -fx-min-width: 160px; -fx-min-height: 160px; -fx-max-width: 160px; -fx-max-height: 160px;">
                                 <children>
                                    <ImageView fx:id="imgPortadaPlaylistCanciones" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <javafx.scene.image.Image url="@../../Resources/img/CatalogoPlaylist/simbolo-aplicacion.png" />
                                       </image>
                                    </ImageView>
                                 </children>
                              </VBox>

                              <!-- Información de la playlist alineada a la izquierda -->
                              <VBox alignment="CENTER_LEFT" spacing="12.0" VBox.vgrow="ALWAYS">
                                 <children>
                                    <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-font-weight: bold;" text="PLAYLIST" />
                                    <Label fx:id="lblNombrePlaylistCanciones" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold; -fx-wrap-text: true;" text="Nombre de Playlist" />

                                    <HBox alignment="CENTER_LEFT" spacing="8.0">
                                       <children>
                                          <Label fx:id="lblDescripcionPlaylistCanciones" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px; -fx-wrap-text: true;" text="Descripción de la playlist" />
                                          <Label fx:id="lblSeparador1" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="•" />
                                          <Label fx:id="lblCantidadCanciones" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="" />
                                          <Label fx:id="lblSeparador2" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="•" />
                                          <Label fx:id="lblDuracionTotal" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="" />
                                       </children>
                                    </HBox>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>

                        <!-- Botones de acción alineados a la izquierda -->
                        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 0 20px;">
                           <children>
                              <Button fx:id="btnPlayAll" onAction="#handlePlayAll" style="-fx-background-color: #9190C2; -fx-text-fill: black; -fx-background-radius: 25px; -fx-min-width: 50px; -fx-min-height: 50px; -fx-font-size: 18px; -fx-font-weight: bold;" text="▶" />
                              <Button fx:id="btnAgregarCanciones" onAction="#handleAgregarCanciones" style="-fx-background-color: transparent; -fx-text-fill: #AFAFC7; -fx-border-color: #AFAFC7; -fx-border-width: 2px; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-padding: 12px 20px; -fx-font-size: 12px; -fx-font-weight: bold;" text="+ Agregar Canciones" />
                              <Button fx:id="btnEditarPlaylist" onAction="#handleEditarPlaylist" style="-fx-background-color: transparent; -fx-text-fill: #AFAFC7; -fx-border-color: #AFAFC7; -fx-border-width: 2px; -fx-background-radius: 20px; -fx-border-radius: 20px; -fx-padding: 12px 15px; -fx-font-size: 12px;" text="Editar" />
                           </children>
                        </HBox>

                        <!-- Encabezados de tabla personalizados -->
                        <HBox spacing="0.0" style="-fx-padding: 0 20px 5px 20px; -fx-border-color: transparent transparent #5A5A80 transparent; -fx-border-width: 0 0 1 0;">
                           <children>
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 40px; -fx-max-width: 40px; -fx-alignment: CENTER;" text="#" />
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 280px; -fx-max-width: 280px; -fx-padding: 0 0 0 10px;" text="Título" />
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 200px; -fx-max-width: 200px; -fx-padding: 0 0 0 10px;" text="Artista" />
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 140px; -fx-max-width: 140px; -fx-alignment: CENTER;" text="Fecha agregada" />
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 80px; -fx-max-width: 80px; -fx-alignment: CENTER;" text="Año" />
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 100px; -fx-max-width: 100px; -fx-alignment: CENTER;" text="Duración" />
                              <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-min-width: 100px; -fx-max-width: 100px; -fx-alignment: CENTER;" text="Acciones" />
                           </children>
                           <VBox.margin>
                              <Insets bottom="-5.0" top="10.0" />
                           </VBox.margin>
                        </HBox>

                        <!-- Tabla de canciones mejorada y alineada correctamente -->
                        <VBox spacing="10.0" style="-fx-padding: 0 20px;" VBox.vgrow="ALWAYS">
                           <children>
                              <!-- Tabla de canciones -->
                              <TableView fx:id="tableCanciones" onMouseClicked="#handleSeleccionarCancion" prefHeight="350.0" style="-fx-background-color: #0A0E27; -fx-control-inner-background: #0A0E27; -fx-selection-bar: #5A5A80; -fx-selection-bar-non-focused: #5A5A80; -fx-table-cell-border-color: transparent; -fx-border-color: transparent; -fx-focus-color: transparent; -fx-faint-focus-color: transparent; -fx-table-column-header-height: 0; -fx-table-header-background: transparent; -fx-cell-focus-inner-border: transparent;" VBox.vgrow="ALWAYS">
                                 <columns>
                                    <TableColumn fx:id="colNumero" minWidth="40.0" prefWidth="40.0" maxWidth="40.0" style="-fx-alignment: CENTER;" text="" />
                                    <TableColumn fx:id="colTitulo" minWidth="280.0" prefWidth="280.0" maxWidth="280.0" text="" />
                                    <TableColumn fx:id="colArtista" minWidth="200.0" prefWidth="200.0" maxWidth="200.0" text="" />
                                    <TableColumn fx:id="colFechaAgregacion" minWidth="140.0" prefWidth="140.0" maxWidth="140.0" style="-fx-alignment: CENTER;" text="" />
                                    <TableColumn fx:id="colAnio" minWidth="80.0" prefWidth="80.0" maxWidth="80.0" style="-fx-alignment: CENTER;" text="" />
                                    <TableColumn fx:id="colDuracion" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" style="-fx-alignment: CENTER;" text="" />
                                    <TableColumn fx:id="colAcciones" minWidth="100.0" prefWidth="100.0" maxWidth="100.0" style="-fx-alignment: CENTER;" text="" />
                                 </columns>
                                 <VBox.margin>
                                    <Insets top="-5.0" />
                                 </VBox.margin>
                              </TableView>
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </children>
            </StackPane>
         </children>
      </HBox>
   </center>

   <!-- Panel inferior - Reproductor -->
   <bottom>
      <AnchorPane fx:id="anchorBarraReproduccion" prefHeight="100.0" style="-fx-background-color: #070F2B;" visible="false" managed="false">
         <children>
            <!-- Barra de progreso -->
            <Slider fx:id="pgbProgresoCancion" layoutX="20.0" layoutY="3.0" prefHeight="14.0" prefWidth="1240.0" style="-fx-control-inner-background: #5A5A80;" value="0.0" min="0.0" max="1.0" />
            
            <!-- Imagen del álbum -->
            <ImageView fx:id="imgCancionActual" layoutX="22.0" layoutY="20.0" fitHeight="70.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true" />
            
            <!-- Nombre de la canción -->
            <Label fx:id="lblCancionActual" layoutX="105.0" layoutY="24.0" prefHeight="35.0" prefWidth="250.0" text="Nombre cancion" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            
            <!-- Botón reproducir/pausar -->
            <Button fx:id="btnPlayPause" layoutX="480.0" layoutY="32.0" mnemonicParsing="false" onAction="#handlePlayPause" prefHeight="43.0" prefWidth="89.0" style="-fx-background-color: #070F2B; -fx-border-radius: 25px; -fx-background-radius: 25px;">
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="29.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Resources/img/play.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="1.0" />
                     </effect>
                  </ImageView>
               </graphic>
            </Button>

            <!-- Botón siguiente -->
            <Button fx:id="btnSiguiente" layoutX="600.0" layoutY="36.0" mnemonicParsing="false" onAction="#handleSiguiente" prefHeight="35.0" prefWidth="57.0" style="-fx-background-color: #070F2B; -fx-border-radius: 25px; -fx-background-radius: 25px;">
               <graphic>
                  <ImageView fitHeight="21.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Resources/img/siguiente-pista.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="1.0" />
                     </effect>
                  </ImageView>
               </graphic>
            </Button>

            <!-- Botón anterior -->
            <Button fx:id="btnAnterior" layoutX="390.0" layoutY="36.0" mnemonicParsing="false" onAction="#handleAnterior" prefHeight="35.0" prefWidth="57.0" style="-fx-background-color: #070F2B; -fx-border-radius: 25px; -fx-background-radius: 25px;">
               <graphic>
                  <ImageView fitHeight="21.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../Resources/img/pista-anterior.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="1.0" />
                     </effect>
                  </ImageView>
               </graphic>
            </Button>
            
            <!-- Nombre del artista -->
            <Label fx:id="lblArtistaActual" layoutX="105.0" layoutY="64.0" prefHeight="14.0" prefWidth="250.0" text="Artista" textFill="WHITE" wrapText="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            
            <!-- Controles adicionales (tiempo y volumen) -->
            <!-- Tiempo actual y total -->
            <Label fx:id="lblTiempoActual" layoutX="700.0" layoutY="40.0" prefHeight="14.0" prefWidth="50.0" text="0:00" style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px;" />
            <Label layoutX="750.0" layoutY="40.0" prefHeight="14.0" prefWidth="10.0" text="/" style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px;" />
            <Label fx:id="lblTiempoTotal" layoutX="760.0" layoutY="40.0" prefHeight="14.0" prefWidth="50.0" text="0:00" style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px;" />
            
            <Button fx:id="btnVolumen" layoutX="820.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleVolumen" style="-fx-background-color: transparent; -fx-text-fill: white;" text="🔊" />
            <Slider fx:id="sliderVolumen" layoutX="860.0" layoutY="45.0" max="1.0" prefWidth="80.0" style="-fx-control-inner-background: #5A5A80;" value="0.5" />
            <Button fx:id="btnExpandir" layoutX="940.0" layoutY="40.0" mnemonicParsing="false" onAction="#handleExpandir" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 12px;">
               <graphic>
                  <Label style="-fx-text-fill: white;" text="⤢" />
               </graphic>
            </Button>
         </children>
      </AnchorPane>
   </bottom>
</BorderPane>
