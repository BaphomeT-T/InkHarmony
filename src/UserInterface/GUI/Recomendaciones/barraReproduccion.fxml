<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<HBox fx:id="barraReproduccion"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/11.0.1"
      fx:controller="UserInterface.CustomerControl.Recomendaciones.BarraReproduccionController"
      prefHeight="80" maxHeight="80"
      style="-fx-background-color:#070f2b;-fx-border-color:#2a2340;-fx-border-width:1 0 0 0;">

    <!-- â”€â”€â”€â”€â”€ info canciÃ³n â”€â”€â”€â”€â”€ -->
    <HBox alignment="CENTER_LEFT" prefWidth="300" spacing="15">
        <children>
            <ImageView fx:id="imgCancionActual" fitHeight="60" fitWidth="60"
                       preserveRatio="true"/>
            <VBox alignment="CENTER_LEFT" spacing="2">
                <children>
                    <Label fx:id="lblNombreCancion" maxWidth="200"
                           style="-fx-text-fill:white;-fx-font-size:14px;-fx-font-weight:bold;"/>
                    <Label fx:id="lblNombreArtista" maxWidth="200"
                           style="-fx-text-fill:#AFAFC7;-fx-font-size:12px;"/>
                </children>
            </VBox>
        </children>
        <padding><Insets left="15"/></padding>
    </HBox>

    <Region HBox.hgrow="ALWAYS"/>

    <!-- â”€â”€â”€â”€â”€ controles â”€â”€â”€â”€â”€ -->
    <VBox alignment="CENTER" spacing="6">
        <children>
            <HBox alignment="CENTER" spacing="20">
                <children>
                    <Button fx:id="btnAnterior" onAction="#clickAnterior"
                            style="-fx-background-color:transparent;-fx-cursor:hand;">
                        <graphic><ImageView fx:id="imgAnterior" fitHeight="22" fitWidth="22"/></graphic>
                    </Button>

                    <Button fx:id="btnPlayPause" onAction="#clickPlayPause"
                            style="-fx-background-color:transparent;-fx-cursor:hand;"/>

                    <Button fx:id="btnSiguiente" onAction="#clickSiguiente"
                            style="-fx-background-color:transparent;-fx-cursor:hand;">
                        <graphic><ImageView fx:id="imgSiguiente" fitHeight="22" fitWidth="22"/></graphic>
                    </Button>
                </children>
            </HBox>

            <HBox alignment="CENTER" spacing="10">
                <children>
                    <Label fx:id="lblTiempoActual"
                           style="-fx-text-fill:#AFAFC7;-fx-font-size:11px;" text="0:00"/>
                    <Slider fx:id="pgbProgresoCancion" prefWidth="400"
                            style="-fx-pref-height:5;"/>
                    <Label fx:id="lblTiempoTotal"
                           style="-fx-text-fill:#AFAFC7;-fx-font-size:11px;" text="0:00"/>
                </children>
            </HBox>
        </children>
    </VBox>

    <Region HBox.hgrow="ALWAYS"/>

    <!-- â”€â”€â”€â”€â”€ volumen â”€â”€â”€â”€â”€ -->
    <HBox alignment="CENTER_RIGHT" prefWidth="200" spacing="10">
        <children>
            <Button fx:id="btnVolumen" onAction="#clickVolumen"
                    style="-fx-background-color:transparent;-fx-text-fill:#AFAFC7;-fx-font-size:14;-fx-cursor:hand;"
                    text="ðŸ”Š"/>
            <Slider fx:id="sliderVolumen" prefWidth="80" max="1" value="0.5"
                    style="-fx-pref-height:5;"/>
        </children>
        <padding><Insets right="15"/></padding>
    </HBox>
</HBox>
