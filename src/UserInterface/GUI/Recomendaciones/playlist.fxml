<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="500" prefWidth="700" style="-fx-background-color: #0A0E27;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.CustomerControl.RecomendacionesControl.PlaylistController">

   <children>

      <!-- Título -->
      <Label layoutX="20" layoutY="20" style="-fx-font-size: 16px; -fx-text-fill: white;" text="Playlist por género recomendadas" />

      <!-- Barra de búsqueda -->
      <HBox layoutX="420" layoutY="18" spacing="10" style="-fx-background-color: #B0BAC3; -fx-background-radius: 20; -fx-padding: 5 10;">
         <children>
            <Button fx:id="btnBuscar" style="-fx-background-color: #B0BAC3;" text="🔍" />
            <TextField fx:id="txtBuscarGenero" prefWidth="160" promptText="Escribe un género..." style="-fx-background-radius: 20;" />
         </children>
      </HBox>

      <!-- Contenedor de playlists -->
      <FlowPane fx:id="contenedorPlaylists" hgap="15" layoutX="30" layoutY="70" prefHeight="424.0" prefWidth="660.0" style="-fx-background-color: #1D1F4E; -fx-padding: 10; -fx-background-radius: 10;" vgap="15" />
      <!-- Tabla de canciones -->
      <TableView fx:id="tablaCanciones" layoutX="30" layoutY="290" managed="false" prefHeight="0" prefWidth="125.0" visible="false">

         <columns>
            <TableColumn fx:id="colTitulo" prefWidth="160" text="Título" />
            <TableColumn fx:id="colArtista" prefWidth="160" text="Artista" />
            <TableColumn fx:id="colAnio" prefWidth="100" text="Año" />
            <TableColumn fx:id="colDuracion" prefWidth="100" text="Duración" />
         </columns>
      </TableView>

   </children>
</AnchorPane>
