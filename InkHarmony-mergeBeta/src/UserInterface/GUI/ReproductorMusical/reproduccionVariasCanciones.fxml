<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="832.0" prefWidth="1280.0" style="-fx-background-color: #0A0E27;" stylesheets="/UserInterface/Resources/estilos/estilos_reproducciones.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserInterface.CustomerControl.ReproductorMusical.ReproduccionVariasCancionesController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-padding: 15px; -fx-background-color: #0A0E27;">
            <children>
                <Button fx:id="btnAtras" onAction="#clickAtras" style="-fx-background-color: #5A5A80; -fx-background-radius: 20px; -fx-padding: 5px;" visible="false">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                            <image><Image url="@../../Resources/img/regresar-pagina.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>

                <TextField fx:id="txtBuscarCancion" promptText="¿Qué quieres reproducir?" style="-fx-background-color: #AFAFC7; -fx-text-fill: #0A0E27; -fx-prompt-text-fill: #666666; -fx-background-radius: 20px; -fx-padding: 10px 15px;" HBox.hgrow="ALWAYS" />

                <Button onAction="#clickBuscarCancion" style="-fx-background-color: #5A5A80; -fx-text-fill: white; -fx-background-radius: 20px; -fx-min-width: 35px;">
                    <graphic>
                        <ImageView fitHeight="24.0" fitWidth="24.0" preserveRatio="true">
                            <image><Image url="@../../Resources/img/lupa.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>

                <Button style="-fx-background-color: #5A5A80; -fx-background-radius: 20px;">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                            <image><Image url="@../../Resources/img/simbolo-aplicacion.png" /></image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </top>

    <left>
        <!-- Reemplazar esta sección del VBox actual -->
        <VBox fx:id="panelIzquierdo" prefWidth="320.0" spacing="10.0" style="-fx-background-color: #1B1A55; -fx-padding: 15px; -fx-background-radius: 10;">
            <BorderPane.margin><Insets bottom="10.0" left="20.0" top="0" /></BorderPane.margin>
            <children>

                <!-- NUEVO HBox para título y botón + -->
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" text="Tu Biblioteca" />
                    <Button fx:id="btnAgregarPalylist" mnemonicParsing="false" onAction="#clickAgregarPlaylist" style="-fx-background-color: #5A5A80; -fx-background-radius: 20px;" text="+" textFill="WHITE">
                        <font>
                            <Font name="System Bold" size="16.0" />
                        </font>
                    </Button>
                </HBox>

                <!-- Campo para búsqueda de playlist -->
                <TextField fx:id="txtBuscarPlaylist" promptText="Busca una playlist por su nombre" style="-fx-background-color: #AFAFC7; -fx-text-fill: #0A0E27; -fx-prompt-text-fill: #666666; -fx-background-radius: 20px; -fx-padding: 8px;" />

                <!-- Lista de playlists -->
                <ListView fx:id="listViewPlaylists" prefHeight="390.0" prefWidth="290.0" style="-fx-background-radius: 10px; -fx-background-color: #1B1A55;" VBox.vgrow="ALWAYS" />

                <!-- Botón recomendaciones al final, centrado -->
                <HBox alignment="CENTER">
                    <Button fx:id="btnRecomendaciones" mnemonicParsing="false" onAction="#clickRecomendaciones" style="-fx-background-color: #5A5A80; -fx-background-radius: 20px; -fx-padding: 8px 16px;" text="Recomendaciones" textFill="WHITE" />
                </HBox>

            </children>
        </VBox>

    </left>

    <center>
        <StackPane>
            <VBox fx:id="vistaCuadricula" style="-fx-background-color: #0A0E27; -fx-padding: 20px;">
                <Label style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" text="Playlists">
                    <VBox.margin><Insets bottom="20.0" /></VBox.margin>
                </Label>
                <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #1B1A55;" VBox.vgrow="ALWAYS">
                    <content>
                        <TilePane fx:id="tilePaneContenido" hgap="20.0" prefColumns="4" vgap="20.0" />
                    </content>
                </ScrollPane>
            </VBox>

            <VBox fx:id="vistaDetalle" style="-fx-background-color: #0A0E27; -fx-padding: 20px;" visible="false">
                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-padding: 10px;">
                    <ImageView fx:id="imgPlaylistHeader" fitHeight="180.0" fitWidth="180.0" preserveRatio="true" />
                    <VBox alignment="CENTER_LEFT" spacing="10.0">
                        <Label style="-fx-text-fill: #AFAFC7; -fx-font-size: 12px; -fx-font-weight: bold;" text="PLAYLIST" />
                        <Label fx:id="lblPlaylistTituloHeader" style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" text="Nombre Playlist" />
                        <Label fx:id="lblAutorHeader" style="-fx-text-fill: #AFAFC7; -fx-font-size: 14px;" text="Autor" />
                    </VBox>
                </HBox>
                <TableView fx:id="tablaCanciones" style="     -fx-background-color: #1B1A55;     -fx-border-color: #5A5A80;     -fx-border-radius: 10px;     -fx-table-cell-border-color: transparent;     -fx-padding: 10px;     -fx-text-fill: white; " VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPortada" prefWidth="70.0" style="-fx-alignment: CENTER;" text="Portada" />
                        <TableColumn fx:id="colTitulo" prefWidth="300.0" style="-fx-alignment: CENTER_LEFT;" text="Título" />
                        <TableColumn fx:id="colArtista" prefWidth="250.0" style="-fx-alignment: CENTER_LEFT;" text="Artista" />
                        <TableColumn fx:id="colDuracion" prefWidth="100.0" style="-fx-alignment: CENTER;" text="Duración" />
                    </columns>
                </TableView>

            </VBox>
        </StackPane>
    </center>

    <bottom>
        <VBox style="-fx-background-color: #201D4E; -fx-padding: 0;">
            <Slider fx:id="pgbProgresoCancion" max="1.0" style="-fx-control-inner-background: #5A5A80; -fx-pref-height: 8px;" value="0.0" />
            <HBox alignment="CENTER" spacing="0.0" style="-fx-padding: 15px 60px;">
                <children>
                    <HBox alignment="CENTER_LEFT" prefWidth="250.0" spacing="10.0">
                        <children>
                            <Pane prefHeight="50.0" prefWidth="50.0" style="-fx-background-radius: 5px;">
                                <children>
                                    <ImageView fx:id="imgAlbumActual" fitHeight="50.0" fitWidth="50.0" preserveRatio="true" />
                                </children>
                            </Pane>
                            <VBox>
                                <Label fx:id="lblNombreCancionActual" style="-fx-font-size: 14px;" text="Nombre canción" textFill="WHITE" />
                                <Label fx:id="lblArtistaActual" style="-fx-font-size: 12px;" text="Artista" textFill="#AFAFC7" />
                            </VBox>
                        </children>
                    </HBox>

                    <VBox alignment="CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
                        <children>
                            <HBox alignment="CENTER" spacing="40.0">
                                <Button onAction="#clickAnterior" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px;" text="⏮" />

                                <Button onAction="#clickReproducir" style="-fx-background-color: transparent;">
                                    <graphic>
                                        <ImageView fx:id="imgPlayPause" fitHeight="54.0" fitWidth="54.0" preserveRatio="true">
                                            <image><Image url="@../../Resources/img/boton-de-play.png" /></image>
                                            <effect><ColorAdjust brightness="1.0" /></effect>
                                        </ImageView>
                                    </graphic>
                                </Button>

                                <Button onAction="#clickSiguiente" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 24px;" text="⏭" />
                            </HBox>
                            <Label fx:id="lblTiempo" style="-fx-font-size: 12px;" text="00:00 / 00:00" textFill="#AFAFC7" />
                        </children>
                    </VBox>

                    <Region prefWidth="250.0" />
                </children>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
